<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mes fichiers</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .file-container {
            max-width: 800px;
            margin: 50px auto;
            padding: 20px;
        }

        .file-card {
            margin-bottom: 20px;
            padding: 15px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        .file-image {
            max-width: 100%;
            height: auto;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="file-container">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Mes fichiers</h2>
                <div>
                    <a href="/dashboard" class="btn btn-info me-2">Tableau de bord utilisateurs</a>
                    <button class="btn btn-primary"
                        onclick="document.getElementById('uploadForm').style.display = 'block'">
                        Ajouter un fichier
                    </button>
                </div>
            </div>

            <form id="uploadForm" style="display: none;" class="mb-4">
                <div class="mb-3">
                    <label for="upload_file" class="form-label">Choisir un fichier</label>
                    <input type="file" class="form-control" id="upload_file" name="upload_file" accept="image/*"
                        required>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <input type="text" class="form-control" id="description" name="description" required>
                </div>
                <button type="submit" class="btn btn-success">Uploader</button>
            </form>

            <div id="filesList"></div>
        </div>
    </div>

    <script>
        // Vérifier si l'utilisateur est connecté
        const token = localStorage.getItem('token');
        if (!token) {
            window.location.href = '/';
        }

        // Charger les fichiers
        async function loadFiles() {
            try {
                const response = await fetch('/files/' + localStorage.getItem('userId'), {
                    headers: {
                        'Authorization': token
                    }
                });
                const files = await response.json();

                const filesList = document.getElementById('filesList');
                filesList.innerHTML = files.map(file => `
                    <div class="file-card">
                        <img src="/uploads/${file.filename}" class="file-image mb-2" alt="${file.description}">
                        <p>${file.description}</p>
                        <small>Uploadé le: ${new Date(file.created_at).toLocaleDateString()}</small>
                    </div>
                `).join('');
            } catch (error) {
                console.error('Erreur lors du chargement des fichiers:', error);
            }
        }

        // Gérer l'upload de fichiers
        document.getElementById('uploadForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData();
            formData.append('upload_file', document.getElementById('upload_file').files[0]);
            formData.append('description', document.getElementById('description').value);
            formData.append('userId', localStorage.getItem('userId'));

            try {
                const response = await fetch('/files', {
                    method: 'POST',
                    headers: {
                        'Authorization': token
                    },
                    body: formData
                });

                if (response.ok) {
                    document.getElementById('uploadForm').reset();
                    document.getElementById('uploadForm').style.display = 'none';
                    loadFiles();
                } else {
                    alert('Erreur lors de l\'upload');
                }
            } catch (error) {
                console.error('Erreur lors de l\'upload:', error);
                alert('Erreur lors de l\'upload');
            }
        });

        // Charger les fichiers au chargement de la page
        loadFiles();
    </script>
</body>

</html>